#!/usr/bin/env bash
# OpenCog Language Capability Analyzer - Racket Implementation
# Analyzes all programming languages in RosettaCog to evaluate their
# AI/AGI capabilities across different cognitive domains.

set -e -u -o pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "${SCRIPT_DIR}/../.." && pwd)"
RACKET_DIR="${SCRIPT_DIR}/../racket"

# Check if Racket is installed
if ! command -v racket &> /dev/null; then
    echo "Error: Racket is not installed. Please install Racket first."
    echo "Visit: https://racket-lang.org/download/"
    exit 1
fi

# Run the Racket analyzer
exec racket "${RACKET_DIR}/opencog-analyzer.rkt" "${ROOT_DIR}"
